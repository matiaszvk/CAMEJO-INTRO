//crea el codigo que permite interactuar con nuestra base de datos 
generator client {
  provider = "prisma-client-js"
}

//le dice a prisma como conectarse a la base de datos nuestra y en donde encontrarla
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  money Decimal @default(0)

  unlocked_characters UnlockedCharacters[]
}

model Character {
  id    Int     @id @default(autoincrement())
  name  String
  power Int
  price Decimal

  users UnlockedCharacters[]
}

//relacionar character con user
model UnlockedCharacters {
  id Int @id @default(autoincrement())

  // Relaci칩n con el modelo User. `user_id` es la clave for치nea que hace referencia a `id` de User.
  user    User @relation(fields: [user_id], references: [id])
  user_id Int

  // Relaci칩n con el modelo Character. `character_id` es la clave for치nea que hace referencia a `id` de Character.
  character    Character @relation(fields: [character_id], references: [id])
  character_id Int
}
